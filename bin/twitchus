#!/usr/bin/env ruby
require "optparse"

options = {}
option_parser = OptionParser.new do |opts|

  opts.on("-c CONFIG", "Specify a config file") do |config|
    options[:config] = config
  end

end

option_parser.parse!

if options[:config].nil?
  puts "Error: You must specify a config file"
  puts
  puts
  puts option_parser.help
  exit 1
else
  exit 0
end

